! URxvt

!URxvt*depth: 32
!URxvt*background: rgba:0000/0000/0000/c200

!Urxvt*transparent: true
!Urxvt*shading: 30

! General settings
URxvt.saveLines: 2000
URxvt.scrollBar: False
URxvt.scrollstyle: rxvt
URxvt.termName: xterm-256color
URxvt.urgentOnBell: True
URxvt.cursorBlink: False

! Fonts
Xft.dpi: 96
Xft.hinting: true
Xft.antialias: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

URxvt.font:xft:Inconsolata-Regular:pixelsize=14
!URxvt.font:xft:Inconsolata-Regular:pixelsize=24
URxvt.boldfont:xft:Inconsolata-Bold:pixelsize=12
!URxvt.boldfont:xft:Inconsolata-Bold:pixelsize=22

! rofi
!rofi.font: scientifica Regular 10 
rofi.terminal: urxvt
rofi.ssh-client: ssh
!rofi.ssh-command: {terminal} -e "{ssh-client} {host}"

! Clickable URLs
URxvt.perl-ext-common:default,matcher
URxvt.url-launcher: google-chrome-stable
URxvt.matcher.button: 1

! Use Control-Shift-V/C for X clipboard
URxvt.iso14755: false
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

